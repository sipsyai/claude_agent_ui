      "maxLength": 5000
    },
    "type": {
      "type": "enumeration",
      "enum": ["string", "number", "boolean", "json", "date"],
      "default": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": false,
      "maxLength": 255
    }
  }
